<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="panako" name="Create the Panako JAR-file">

	<!-- Configuration -->
	<property name="version" value="1.2" />
	
	<!-- Run the ant timestamp task -->
	<tstamp />

	<!-- Clean the build system -->
	<target name="clean">
		<delete dir="../bin" />
		<delete dir="../doc/javadoc" />
	</target>

	<!-- Compiles the java files to bytecode and copy required resources -->
	<target name="compile">
		<mkdir dir="../bin" />
		<javac srcdir="../src" destdir="../bin" includeantruntime="false" >
			<classpath>
				<fileset dir="../lib" includes="*.jar" excludes="*src*.jar"  />
			</classpath>
		</javac>
	</target>
	
	<!-- Creates javadoc in ../doc/javadoc directory -->
	<target name="javadoc">
		<javadoc access="public" 
			author="true" 
			classpath="${junit_jar}:../lib/TarsosDSP-2.0.jar:../lib/json-2.0.jar:../lib/commons-exec-1.1.jar:../lib/mapdb-1.0.6.jar" 
			destdir="../doc/javadoc"
			doctitle="Panako ${version}-${DSTAMP}" 
			nodeprecated="false" 
			nodeprecatedlist="false" 
			noindex="false" 
			nonavbar="false"
			notree="false"
			 
			source="1.7" 
			sourcepath="../src" 
			splitindex="true" 
			use="true" 
			version="true" />
	</target>
	
	<!-- Creates index.html with info about panako in ../doc/ directory -->
	<target name="doc"> 
    	<exec dir="../doc/etc" executable="./docs2html"/>
    </target>

	<!-- Creates the Panako executable JAR-File client -->
	<target name="panako" depends="compile">
		<!-- with source code panako-${version}.jar -->
		<jar destfile="panako-${version}.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<!-- Standard manifest attributes -->
				<attribute name="Implementation-Version" value="${version}-${DSTAMP}" />
				<attribute name="Built-By" value="${built_by}" />
				<attribute name="Created-By" value="${built_by}" />
				<attribute name="Built-Date" value="${TODAY}" />
				<attribute name="Main-Class" value="be.panako.cli.Panako" />
			</manifest>
			
			<!-- mapdb jar files -->
			<zipfileset excludes="META-INF/**" src="../lib/mapdb-1.0.6.jar"/>
			
			<!-- JSON lib -->
			<zipfileset excludes="META-INF/**" src="../lib/json-2.0.jar"/>
			
			<!-- Execute scripts -->
			<zipfileset excludes="META-INF/**" src="../lib/commons-exec-1.1.jar"/>
			
			<!-- DSP library -->
			<zipfileset excludes="META-INF/**" src="../lib/TarsosDSP-2.0.jar"/>
    		
			<!-- exclude everything except src dir -->
			<fileset dir="../bin">
				<exclude name="**/*.wav" />
				<exclude name="**/test/**" />
			</fileset>

			<!-- include source files -->
			<fileset dir="../src">
				<include name="**/*.java" />
			</fileset>
		</jar>
	</target>
	

	<!-- builds a release: all examples, documentation and library in the correct folders-->
	<target name="release" depends="doc,javadoc,panako">
		
	    <mkdir dir="Panako-${version}"/>
	    <mkdir dir="Panako-${version}/release"/>
	    
	    <move file="panako-${version}.jar" tofile="Panako-${version}/release/panako.jar"/>
		<move file="../doc/index.html" tofile="Panako-${version}/readme.html"/>
		
		<copy file="../doc/panako" tofile="Panako-${version}/release/panako"/>
	    <copy file="../config.properties" tofile="Panako-${version}/release/config.properties"/>
	    <copy file="logging.properties" tofile="Panako-${version}/release/logging.properties"/>
		<copy file="../license.txt" tofile="Panako-${version}/LICENSE"/>
		
		<copy  todir="Panako-${version}/doc/">
			<fileset dir="../doc/javadoc"/>
		</copy>
		
		 <zip destfile="Panako-${version}/Panako-${version}.zip">
		 	<zipfileset dir="../src" prefix="src/"/>
		 	<zipfileset dir="../lib" prefix="lib/"/>
		 	<zipfileset dir="../build" prefix="build/" >
		 		<exclude name="**/Panako-${version}/**"/>
		 	</zipfileset>
		 	
		 	<zipfileset dir="Panako-${version}/release" prefix="panako/"/>
		 		
		 	<zipfileset dir="Panako-${version}/" includes="readme.html"/>
		 	<zipfileset dir="Panako-${version}/" includes="LICENSE"/>
		 </zip>
	</target>
	
	<!-- Installs the panako jar file to /opt/panako -->
	<target name="install" depends="panako">
		 <copy file="../doc/panako" tofile="/opt/panako/panako"/>
	     <move file="panako-${version}.jar" tofile="/opt/panako/panako.jar"/>
	     <copy file="logging.properties" tofile="/opt/panako/logging.properties"/>
	</target>
</project>
